   journal = {Journal of Applied Ecology},
   keywords = {Animal movement,Barrier,Dispersal,Habitat fragmentation,Permeability,Peromyscus leucopus,Road avoidance,Tamias striatus,Traffic,Translocation},
   month = {2},
