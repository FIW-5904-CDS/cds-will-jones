   issue = {5},
   journal = {Diversity},
   keywords = {Barriers,Genetic diversity,Roadkill,Semi-arid regions},
   month = {5},
   publisher = {MDPI AG},
   title = {A review of the impacts of roads on wildlife in semi-arid regions},
   volume = {11},
   year = {2019}
